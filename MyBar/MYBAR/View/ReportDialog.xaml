<Window x:Class="MYBAR.View.ReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MYBAR.View"
        mc:Ignorable="d"
        Title="ReportDialog"  VerticalAlignment="Stretch"   AllowsTransparency="False" ResizeMode="NoResize" HorizontalAlignment="Stretch" BorderThickness="1" BorderBrush="Black"   WindowStartupLocation="CenterScreen" WindowStyle="None">

    <Window.Background>
        <SolidColorBrush Opacity="0.7" Color="White"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Height="30" HorizontalAlignment="Right"  Name="Close" FontSize="20" Background="Transparent" Click="Close_Click">
            <Image Source="/Images/delete.png"></Image>
        </Button>
        <ContentControl Grid.Row="1" Name="RaportContainer" />
    </Grid>
</Window>
