<Window x:Class="MYBAR.CustomControls.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MYBAR.CustomControls"
         xmlns:control="clr-namespace:MYBAR.CustomControls"
        mc:Ignorable="d"
        Title="LoadingDialog" Height="300" Width="300" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <control:Loading />
            <TextBlock Grid.Row="1" TextAlignment="Center" Foreground="Black" Background="AliceBlue">Ju lutem prisni !</TextBlock>
      
    </Grid>
</Window>
